// Operador Ternário
public class Programa05 {

	public static void main(String[] args) {
		int valor = -3, numero;

		// If do modo tradicional
        /*
		if (valor > 0) {
			numero = valor;
		} else {
			numero = 7;
		}
        */
		// Operador Ternário trabalha como o If acima
		numero = (valor > 0) ? valor : 7;

		System.out.println(numero);
	}
}
